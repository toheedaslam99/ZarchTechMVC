@model E_infoGlobalNew.Models.Advertisement
@{
    ViewBag.Title = Model.ContentName;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<br />
<br />
<!-- Banner Start -->
<div class="iq-main-slider site-video">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="pt-0">
                    <iframe width="560" height="515" src="@Model.TragetUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner End -->
<!-- MainContent -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="mt-4 pt-0 pb-4">
                <div class="row">
                    <div class="col-md-9 col-12 genres-list mb-auto">
                        <div class="d-md-flex">
                            <h2 class="slider-text big-title title text-uppercase" data-iq-gsap="onStart" data-iq-position-x="-150" data-iq-position-y="0" data-iq-duration="1" data-iq-delay=".4">@Model.ContentName</h2>
                        </div>
                        <ul class="p-0 mt-2 list-inline d-flex flex-wrap movie-content">
                            <li class="trending-list">
                                <a class="text-primary title">Productions</a>
                            </li>

                            <li class="trending-list">
                                <a class="title">@Model.CustomerUser.Name</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section id="iq-upcoming-movie">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="d-flex align-items-center justify-content-between">
                    <h4 class="main-title">Related Content</h4>
                </div>
                <ul class="row list-inline  mb-0 iq-rtl-direction">
                    @foreach (var item in ViewBag.Related)
                    {
                        <li class="slide-item col-lg-4 col-md-4 col-sm-6 col-6 mb-4">
                            <div class="block-images position-relative ">
                                <div class="img-box">
                                    <img src="~/AdvertiseImage/@item.Image" class="img-fluid" alt="" loading="lazy">
                                </div>
                                <div class="block-description">
                                    <h6 class="iq-title"><a href="~/design/logs?ID=@item.ID&CID=@item.CustomerID">@item.ContentName</a></h6>
                                    <div class="hover-buttons">
                                        <a href="~/design/logs?ID=@item.ID&CID=@item.CustomerID" role="button" class="btn btn-hover">
                                            <i class="fa fa-play mr-1" aria-hidden="true"></i>
                                            play now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>

