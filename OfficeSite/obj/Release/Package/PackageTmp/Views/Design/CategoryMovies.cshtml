<!-- MainContent -->
<div class="main-content">
    <section id="iq-upcoming-movie">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 col-lg-8 col-sm-12">
                    <div class="d-flex align-items-center justify-content-between">
                        @foreach (var Cate in Model.Take(1))
                        {
                            <h4 class="main-title">@Cate.Category.CategoryName</h4>
                        }
                    </div>
                    <ul class="row list-inline  mb-0 iq-rtl-direction">
                        @foreach (var item in Model)
                        {
                            <li class="slide-item col-lg-4 col-md-4 col-sm-6 col-6 mb-4">
                                <div class="block-images position-relative ">
                                    <div class="img-box">
                                        <img src="~/image/@item.Movie1.MovieImage" class="img-fluid" alt="" loading="lazy">
                                    </div>
                                    <div class="block-description">
                                        <h6 class="iq-title"><a href="@Url.Action("movie","design",new {specificmovies = item.Movie1.Title, find = item.CategoryID })">@item.Movie1.Title</a></h6>
                                        <div class="hover-buttons">
                                            <a href="@Url.Action("movie","design",new {specificmovies = item.Movie1.Title, find = item.CategoryID })" role="button" class="btn btn-hover">
                                                <i class="fa fa-play mr-1" aria-hidden="true"></i>
                                                play now
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <div class="container text-center">
                        <div class="row">
                            <div class="col-md-12 col-lg-12 col-sm-12">
                                @foreach (var item in ViewBag.Cate)
                                {
                                    @Html.PagedListPager(Model, pageNumber => Url.Action("CategoryMovies", new { CateId = item.CategoryName, find = item.CategoryID, pageNumber }));
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <aside class="blog-sidebar">
                        <div class="widget blog-widget">
                            <div class="widget-title mb-30">
                                <h5 class="title">Recent Blog Posts</h5>
                            </div>
                            <div class="rc-post">
                                <ul>
                                    @foreach (var Early in ViewBag.Early)
                                    {
                                        <li class="rc-post-item">
                                            <div class="thumb">
                                                <a href="Design/blog?BlogName=@Early.BlogTitle"><img src="~/Image/@Early.BlogPoster" alt=""></a>
                                            </div>
                                            <div class="content">
                                                <h6 class="Design/blog?BlogName=@Early.BlogTitle"><a href="blog-details.html">@Early.BlogTitle</a></h6>
                                            </div>
                                        </li>
                                        foreach (var Landing in ViewBag.SideBar)
                                        {
                                            if (Landing.PageSubType == Early.BlogTitle)
                                            {
                                                if (Landing.AdsType != "Manually")
                                                {
                                                    <li class="rc-post-item">
                                                        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8209193384023908"
                                                                crossorigin="anonymous"></script>
                                                        <!-- responsive square -->
                                                        <ins class="adsbygoogle"
                                                                style="display:block"
                                                                data-ad-client="ca-pub-8209193384023908"
                                                                data-ad-slot="2285067466"
                                                                data-ad-format="auto"
                                                                data-full-width-responsive="true"></ins>
                                                        <script>
                                                            (adsbygoogle = window.adsbygoogle || []).push({});
                                                        </script>
                                                    </li>
                                                }
                                                else
                                                {
                                                        <li class="rc-post-item">
                                                            <div class="thumb">
                                                                <a href="~/design/logs?ID=@Landing.ID&CID=@Landing.CustomerID">
                                                                    <img src="~/AdvertiseImage/@Landing.Image" alt="">
                                                                </a>
                                                            </div>
                                                        </li>
                                                }
                                            }
                                                
                                        }
                                    }
                                </ul>
                                <br />
                                <ul>
                                    @foreach (var Top in ViewBag.Top)
                                    {
                                        <li class="rc-post-item">
                                            <div class="thumb">
                                                <a href="Design/blog?BlogName=@Top.BlogTitle"><img src="~/Image/@Top.BlogPoster" alt=""></a>
                                            </div>
                                            <div class="content">
                                                <h6 class="title"><a href="Design/blog?BlogName=@Top.BlogTitle">@Top.BlogTitle</a></h6>
                                                @*<span class="date"><i class="far fa-clock"></i> 10 Mar 2021</span>*@
                                            </div>
                                        </li>
                                    }
                                </ul>
                                <br />
                                <ul>
                                    @foreach (var Reviews in ViewBag.Reviews)
                                    {
                                        <li class="rc-post-item">
                                            <div class="thumb">
                                                <a href="Design/blog?BlogName=@Reviews.BlogTitle"><img src="~/Image/@Reviews.BlogPoster" alt=""></a>
                                            </div>
                                            <div class="content">
                                                <h6 class="title"><a href="Design/blog?BlogName=@Reviews.BlogTitle">@Reviews.BlogTitle</a></h6>
                                                @*<span class="date"><i class="far fa-clock"></i> 10 Mar 2021</span>*@
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>
</div>
