@model E_infoGlobalNew.Models.Movie
@{
    ViewBag.Title = Model.Focuskeyphrase;
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@section Head{
    <meta name="description" content="@Model.MetaDiscription">
    @foreach (var item in Model.MovieTags.Where(x => x.MovieID == Model.MovieID).ToList())
    {
        <meta name="keywords" content="@item.TagName">
    }
    <meta name="author" content="E-info Movies">
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:image" content="http://einfomovies.com/Image/@Model.MovieImage" />
    <meta property="og:image:width" content="1920" />
    <meta property="og:type" content="article" />
    <meta property="og:image:height" content="500" />
    <meta property="og:url" content="@Request.Url.AbsoluteUri" />
    <meta property="og:description" content="@Model.Discription" />
    <script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=64635c7fd4272100194838d2&product=video-share-buttons' async='async'></script>
}
<section class="iq-main-slider site-video">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="pt-0">
                    <video id="my-video" class="video-js vjs-big-play-centered w-100" controlsList="nodownload" autoplay="autoplay" controls preload="auto">
                        <source src="~/Movies/@Model.MovieFile" type="video/mp4" />
                        <source src="~/Movies/@Model.MovieFile" type="video/webm" />
                    </video>
                </div>

            </div>
        </div>
    </div>
</section>
<div class="main-content movi ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="trending-info mt-4 pt-0 pb-4">
                    <div class="row">
                        <div class="col-md-12 col-12 col-12 col-sm-12  mb-auto">
                            <div class="d-md-flex">
                                <h1 class="trending-text big-title text-uppercase mt-0 fadeInLeft animated"
                                    data-animation-in="fadeInLeft" data-delay-in="0.6"
                                    style="opacity: 1; animation-delay: 0.6s; font-size: 40px;">
                                    @Model.Title
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model.Redirections)
