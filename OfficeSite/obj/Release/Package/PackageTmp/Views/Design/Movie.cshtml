                {
                    <div class="col-md-2 col-lg-2 col-sm-6 col-6 text-center">
                        <div class="thumb">
                            <a href=""><img src="~/Content/logo/Disney.png" alt=""></a>
                            <br />
                            <a target="_blank" href="@Url.Action("RedirectionLogs","Design", new { id = item.MovieID, tid = item.TunerID, rid = item.ID, URL = item.TargetURL })" class="btn btn-hover iq-button">
                                <i class="fa fa-play" aria-hidden="true"></i>Watch Now
                            </a>
                        </div>
                    </div>
                }
                if (item.Tuner.TunerName == "Apple Tv Movies")
                {
                    <div class="col-md-2 col-lg-2 col-sm-6 col-6 text-center">
                        <div class="thumb">
                            <a href=""><img src="~/Content/logo/apple-tv.png" alt=""></a>
                            <br />
                            <a target="_blank" href="@Url.Action("RedirectionLogs","Design", new { id = item.MovieID, tid = item.TunerID, rid = item.ID, URL = item.TargetURL })" class="btn btn-hover iq-button">
                                <i class="fa fa-play" aria-hidden="true"></i>Watch Now
                            </a>
                        </div>
                    </div>
