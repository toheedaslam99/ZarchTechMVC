
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-US">
<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Favicon.png" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/NewTheme/css/bootstrap.min.css" />
    <!-- Typography CSS -->
    <link rel="stylesheet" href="~/NewTheme/css/typography.css">
    <!-- Style -->
    <link rel="stylesheet" href="~/NewTheme/css/style.css" />
    <!-- Responsive -->
    <link rel="stylesheet" href="~/NewTheme/css/responsive.css" />
</head>
<body>
    <!-- MainContent -->
    <div class="sign-in-page" style="background-image: url(../../NewTheme/images/trending/18.jpg);">
        <div class="container">
            <div class="row justify-content-center align-items-center height-self-center">
                <div class="col-lg-7 col-md-12 align-self-center">
                    <div class="sign-user_card ">
                        <div class="sign-in-page-data">
                            <div class="sign-in-from w-100 m-auto">
                                <form class="" action="~/Admin/Registration" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input type="text" class="form-control mb-0" name="Name" placeholder="Enter Full Name" autocomplete="off" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Father Name</label>
                                                <input type="text" class="form-control mb-0" name="FatherName" placeholder="Enter Father Name" autocomplete="new-fathername" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>E-mail</label>
                                                <input type="email" class="form-control mb-0" name="Email" placeholder="Enter email" autocomplete="new-email" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Password</label>
                                                <input type="password" class="form-control mb-0" name="Password" placeholder="Password" autocomplete="new-password" required>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-3">
                                                    <div class="custom-control custom-radio mt-2">
                                                        <input type="radio" value="One-Month" id="One" name="PlanType" class="custom-control-input">
                                                        <label class="custom-control-label" for="One">
                                                            $1 / 1 Months
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="custom-control custom-radio mt-2">
                                                        <input type="radio" value="Three-Month" id="Two" name="PlanType" class="custom-control-input">
                                                        <label class="custom-control-label" for="Two">
                                                            $2 / 3 Months
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="custom-control custom-radio mt-2">
                                                        <input type="radio" value="Six-Month" id="Three" name="PlanType" class="custom-control-input">
                                                        <label class="custom-control-label" for="Three">
                                                            $5 / 6 Months
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <div class="custom-control custom-radio mt-2">
                                                        <input type="radio" value="One-Year" id="Four" name="PlanType" class="custom-control-input">
                                                        <label class="custom-control-label" for="Four">
                                                            $10 / 1 Year
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-hover my-2">Sign Up</button>
                                </form>
                            </div>
                        </div>
                        <div class="mt-3">
                            <div class="d-flex justify-content-center links">
                                Already have an account? <a href="login.html" class="text-primary ml-2">Sign In</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- MainContent End-->
    <!-- jQuery, Popper JS -->
    <script src="~/NewTheme/js/jquery-3.5.1.min.js"></script>
    <script src="~/NewTheme/js/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/NewTheme/js/bootstrap.min.js"></script>
    <!-- owl carousel Js -->
    <script src="~/NewTheme/js/owl.carousel.min.js"></script>
    <!-- select2 Js -->
    <script src="~/NewTheme/js/select2.min.js"></script>
    <!-- Magnific Popup-->
    <script src="~/NewTheme/js/jquery.magnific-popup.min.js"></script>
    <!-- Custom JS-->
    <script src="~/NewTheme/js/custom.js"></script>
    <!-- rtl -->
    <script src="~/NewTheme/js/rtl.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @if (TempData["EmailCheck"] != null)
    {
        <script>
            swal("Email!", "@TempData["EmailCheck"]", "error");
        </script>
    }
    @if (TempData["PassWordCheck"] != null)
    {
        <script>
            swal("Password!", "@TempData["PassWordCheck"]", "error");
        </script>
    }
    @if (TempData["PlanCheck"] != null)
    {
        <script>
            swal("Pricing Plan!", "@TempData["PlanCheck"]", "info");
        </script>
    }
</body>
</html>

