                    <div class="vstack gap-4">
                        @foreach (var movie in ViewBag.movielist)
                        {
                            <div class="d-flex">
                                <img src="~/Image/@movie.MovieImage" alt="" height="40" class="rounded">
                                <div class="ms-2 flex-grow-1">
                                    <h6 class="mb-1 font-size-15"><a class="text-body">@movie.Title</a></h6>
                                    <p class="text-muted mb-0">@movie.UserTable.UserName</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div><!--end card-->
    </div><!--end col-->
