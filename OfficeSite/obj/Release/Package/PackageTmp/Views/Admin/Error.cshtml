
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
    <link rel="shortcut icon" href="~/Content/Asset/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/Content/Asset/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Content/Asset/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Content/Asset/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-5">
                        <h1 class="display-2 fw-medium">4<i class="bx bx-buoy bx-spin text-primary display-3"></i>4</h1>
                        @*<h4 class="text-uppercase">Sorry, page not found</h4>*@
                        <h4 class="text-uppercase">@Session["Error"]</h4>
                        <div class="mt-5 text-center">
                            <a class="btn btn-primary waves-effect waves-light" href="@Url.Action("LandingPage","Design")">Back to Home</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div>
                        <img src="~/Content/Asset/images/error-img.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="~/Content/Asset/libs/jquery/jquery.min.js"></script>
    <script src="~/Content/Asset/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Asset/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Content/Asset/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Content/Asset/libs/node-waves/waves.min.js"></script>

    <script src="~/Content/Asset/js/app.js"></script>
</body>
</html>
