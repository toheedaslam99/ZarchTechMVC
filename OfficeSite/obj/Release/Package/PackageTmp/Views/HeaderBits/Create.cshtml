            var selectedValue = $(this).val();
            if (selectedValue == "OnSite") {
                $("#Embded").show();
                $("#Target").hide();
            }
            if (selectedValue == "OficalSite") {
                $("#Embded").hide();
                $("#Target").show();
            }
        });
    });
    $(document).ready(function () {
        $("#PageType").change(function () {
            var selectedValue = $(this).val();
            if (selectedValue == "0") {
                $("#HideOther").hide();
                $("#HideCategory").hide();
            }
            if (selectedValue == "OtherPages") {
