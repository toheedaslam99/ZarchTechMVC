
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer Login</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/InfoLogo.png">

    <!-- owl.carousel css -->
    <link rel="stylesheet" href="~/Content/Asset/libs/owl.carousel/~/Content/Asset/owl.carousel.min.css">

    <link rel="stylesheet" href="~/Content/Asset/libs/owl.carousel/~/Content/Asset/owl.theme.default.min.css">

    <!-- Bootstrap Css -->
    <link href="~/Content/Asset/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Content/Asset/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Content/Asset/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container-fluid p-0">
        <div class="row g-0">

            <div class="col-xl-9">
                <div class="auth-full-bg">
                    <div class="bg-overlay">
                    </div>
                </div>
            </div>
            <!-- end col -->

            <div class="col-xl-3">
                <div class="auth-full-page-content p-md-5 p-4">
                    <div class="w-100">

                        <div class="d-flex flex-column h-100">
                            <div class="mb-4 mb-md-5">
                                <a href="index.html" class="d-block auth-logo">
                                    <img src="~/Content/InfoLogo.png" alt="" height="18" class="auth-logo-dark">
                                    <img src="~/Content/InfoLogo.png" alt="" height="18" class="auth-logo-light">
                                </a>
                            </div>
                            <div class="my-auto">

                                <div>
                                    <h5 class="text-primary">Welcome Back !</h5>
                                    <p class="text-muted">Sign in to continue to Einfo.</p>
                                </div>
                                @using (Html.BeginForm("CustomerLogin", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div class="mt-4">

                                        <div class="mb-3">
                                            <label for="username" class="form-label">Username</label>
                                            <input type="text" class="form-control" name="UserName" id="username" placeholder="Enter username">
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Password</label>
                                            <div class="input-group auth-pass-inputgroup">
                                                <input type="password" name="Password" class="form-control" placeholder="Enter password" aria-label="Password" aria-describedby="password-addon">
                                                <button class="btn btn-light " type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>
                                            </div>
                                        </div>

                                        <div class="mt-3 d-grid">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">Log In</button>
                                        </div>
                                    </div>
                                }
                                <div class="mt-4 mt-md-5 text-center">
                                    <p class="mb-0">
                                        ©
                                        <script>document.write(new Date().getFullYear())</script> Einfo. Crafted with <i class="mdi mdi-heart text-danger"></i>
                                    </p>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->
    </div>
    <!-- JAVASCRIPT -->
    <script src="~/Content/Asset/libs/jquery/jquery.min.js"></script>
    <script src="~/Content/Asset/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Asset/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Content/Asset/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Content/Asset/libs/node-waves/waves.min.js"></script>

    <!-- owl.carousel js -->
    <script src="~/Content/Asset/libs/owl.carousel/owl.carousel.min.js"></script>

    <!-- auth-2-carousel init -->
    <script src="~/Content/Asset/js/pages/auth-2-carousel.init.js"></script>

    <!-- App js -->
    <script src="~/Content/Asset/js/app.js"></script>
</body>
</html>
