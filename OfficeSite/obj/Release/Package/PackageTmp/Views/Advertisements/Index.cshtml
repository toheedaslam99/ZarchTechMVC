@model IEnumerable<E_infoGlobalNew.Models.Advertisement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .colmn {
        margin-top: 10px;
    }

    .fa-trash-alt {
        color: red;
    }

    .fa-pencil-alt {
        color: green;
    }

    .fa-eye {
        color: black;
    }
</style>
<p class="btn btn-info float-end colmn">
    @Html.ActionLink("Add New", "Create")
<p />
<button type="button" class="btn btn-info  colmn" data-bs-toggle="modal" data-bs-target="#myModal">Status</button>

<!-- sample modal content -->
<div id="myModal" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Status Update</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Advertisements/UpdateStatus" method="post">
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-6">
                                <label class="fw-bold">Customer</label>
                                <select name="CustomerID" class="form-control">
                                    @if (ViewBag.Customer != null)
                                    {
                                        <option value="0">--Select--</option>
                                        foreach (var item in ViewBag.Customer)
                                        {
                                            <option value="@item.ID">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="fw-bold">Status</label>
                                <select name="Status" class="form-control">
                                    <option value="Active">Active</option>
                                    <option value="In-Active">In-Active</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary waves-effect" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Save changes</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<table id="tblUser" class="table table-bordered dt-responsive  nowrap w-100 table_wrapper">
    <thead>
        <tr>
