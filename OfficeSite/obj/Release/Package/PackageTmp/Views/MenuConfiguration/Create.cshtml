@model E_infoGlobalNew.Models.Menu

@{
    ViewBag.Title = "Create Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .Colmn {
        margin-top: 10px;
    }

    .upclonm {
        margin-top: -25px;
        text-decoration: none;
    }
    #CreateBy {
        display: none;
    }
    #UpdateBy {
        display: none;
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="container-fluid">
        <div class="row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-4">
            <label>Menu Name</label>
            @Html.EditorFor(model => model.MenuName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MenuName, "", new { @class = "text-danger" })
        </div>

        <div class="col-4">
            <label>Description</label>
            @Html.EditorFor(model => model.MenuDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MenuDescription, "", new { @class = "text-danger" })
        </div>

        <div class="col-4">
            <label>Status</label>
            @Html.DropDownList("MenuStatusID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MenuStatusID, "", new { @class = "text-danger" })
        </div>

        <div class="col-3"  id="CreateBy">
            <label>CreateBy</label>
            @Html.DropDownList("CreateBy", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CreateBy, "", new { @class = "text-danger" })
        </div>

        <div class="col-3" id="UpdateBy">
            <label>UpdateBy</label>
            @Html.DropDownList("UpdateBy", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UpdateBy, "", new { @class = "text-danger" })
       </div>
        <div class="form-group Colmn">
            <div class="float-end">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
</div>
}
<div class="upclonm btn btn-dark">
    @Html.ActionLink("Back", "Index")
</div>
