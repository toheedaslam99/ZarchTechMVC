@model E_infoGlobalNew.Models.BlogCategory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .Colmn {
        margin-top: 10px;
    }

    .upclonm {
        margin-top: -25px;
        text-decoration: none;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BlogCategoryID)
            <div class="col-12">
                <label>Category Name</label>
                @Html.EditorFor(model => model.BlogCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BlogCategoryName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group Colmn">
                <div class="float-end">
                    <input type="submit" value="Update" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}
<div class="upclonm btn btn-dark">
    @Html.ActionLink("Back", "Index")
</div>
